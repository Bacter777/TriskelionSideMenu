<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardOneID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:background="@android:color/white"
            android:elevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="731dp">

                <ImageView
                    android:id="@+id/ivBacter"
                    android:layout_width="400dp"
                    android:layout_height="226dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="22dp"
                    android:layout_marginEnd="0dp"
                    android:src="@drawable/home_bg"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/deplib"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ivBacter"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="93dp"
                    android:text="Dependency Libraries:"
                    android:textColor="@color/colorProgress"
                    android:textSize="13sp"
                    android:textStyle="normal"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/library"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/deplib"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="20dp"
                    android:text="-CalendarView\n-KenBurnsView\n-ResideMenu\n-AndroidX Biometric\n-Google Material\n-Android Support Design"
                    android:textColor="@color/colorProgress"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/dev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/library"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="123dp"
                    android:layout_marginEnd="120dp"
                    android:gravity="center"
                    android:text="@string/dev"
                    android:textAlignment="center"
                    android:textColor="@color/colorProgress"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dev"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="T.Birth 09.10.94"
                    android:textAlignment="center"
                    android:textColor="@color/colorProgress"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</FrameLayout>